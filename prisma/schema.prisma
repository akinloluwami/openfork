generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id         String    @id @default(cuid())
  name       String?
  username   String?
  email      String    @unique
  password   String?
  createdAt  DateTime  @default(now())
  updatedAt  DateTime  @updatedAt
  githubUrl  String?
  profileUrl String?
  isVerified Boolean   @default(false)
  github     Github?
  projects   Project[]
  upvotes    Upvote[]
}

model Github {
  id        String   @id @default(cuid())
  name      String
  url       String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  user      User     @relation(fields: [id], references: [id])
}

model Project {
  id          String   @id @default(cuid())
  name        String
  description String
  githubUrl   String
  logoUrl     String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  userId      String
  user        User     @relation(fields: [userId], references: [id])
  upvotes     Upvote[]
}

model Upvote {
  id        String   @id @default(cuid())
  upvoterId String
  projectId String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  project   Project  @relation(fields: [projectId], references: [id])
  upvoter   User     @relation(fields: [upvoterId], references: [id])
}
